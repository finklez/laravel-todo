<form {{action 'authenticate' on='submit'}} class="login-form">
  {{input id='email' placeholder='אימייל' value=email}}
  {{input id='password' placeholder='סיסמא' type='password' value=password}}
  <button type="submit" class="btn btn-default">הרשם</button>
  {{#if errorMessage}}
    <div class="err-msg">
      <p>{{errorMessage}}</p>
    </div>
  {{/if}}
</form>